<div class="reviewContainer">
  <div class="reviewContainerMiddle">
    <div class="reviewImgContainer">
      <img class="reviewImg" src="{{movie.image_link}}" alt="{{movie.title}}" />
    </div>
    <ul class="reviewDescription">
      <h1>{{movie.title}}</h1>
      <h2>Review</h2>
    </ul>
  </div>
</div>

{{#if checkUserName}}
  {{#unless havePosted}}
    <div class="reviewFormContainer">
      <div class="reviewFormContainerInside">
        <h4>Add your own review</h4>
        <form
          class="reviewForm"
          id="reviewform"
          method="post"
          action="http://localhost:8080/movieid/{{movie.id}}/reviews/postReview"
        >

          <div class="form-group mt-3 reviewInput">
            <h6>How was the movie?</h6>
            <input
              type="text"
              class="form-control"
              id="comment"
              name="comment"
              placeholder="Enter your comment"
              required
            />
          </div>

          <div class="form-group mt-3 reviewInput">
            <h6>What would you rate the movie out of 10?</h6>
            <input
              type="number"
              class="form-control"
              name="rating"
              id="rating"
              placeholder="Enter your rating"
              min="0"
              max="10"
              required
            />
          </div>
          <div class="submitReviewBtnContainer">
            <button type="submit" class="submitReviewBtn">Post your review</button>
          </div>
        </form>
      </div>
    </div>
  {{/unless}}
{{/if}}

<div class="container">
  <div class="row">
    <div class="col-12">
      {{#if havePosted}}
        {{#if displayAllReview.length}}
          <div class="reviewTitleUpdateDiv">
            <h3 class="reviewTitle">Reviews</h3>
            <a class="updateButton ms-auto" href="http://localhost:8080/movieid/{{movieId.id}}/review/editReview">Update</a>
            <form
              class="deleteForm"
              id="deleteForm"
              method="post"
              action="http://localhost:8080/movieid/{{movie.id}}/reviews/deleteReview"
            >
            <a class="deleteButton" href="#" onclick="document.getElementById('deleteForm').submit();">Delete</a>
            </form>
          </div>
          {{#each displayAllReview}}
            <div class="reviewList">
              <div class="avatarIcon">
                <img
                  class="avatarImg"
                  src="/assets/img/avatar.png"
                  alt="avatar"
                />
              </div>
              <div class="userInfo">
                <h4 class="updateReviewDate">{{local_user_email}}</h4>
                <p class="updateReviewDate">{{updated_at}}</p>
                <p>Comment: {{comment}}</p>
                <div id="test">
                </div>
              </div>
              <div class="userRating ms-auto">
                <h6 class="reviewRating">{{rating}}/10 &#9733;</h6>
              </div>
            </div>
          {{/each}}
        {{else}}
          <p>No reviews found.</p>
        {{/if}}
      {{else}}
        {{#if displayAllReview.length}}
          <div class="reviewTitleUpdateDiv">
            <h3 class="reviewTitle">Reviews</h3>
          </div>
          {{#each displayAllReview}}
            <div class="reviewList">
              <div class="avatarIcon">
                <img
                  class="avatarImg"
                  src="/assets/img/avatar.png"
                  alt="avatar"
                />
              </div>
              <div class="userInfo">
                <h4 class="updateReviewDate">{{local_user_email}}</h4>
                <p class="updateReviewDate">{{updated_at}}</p>
                <p>Comment: {{comment}}</p>
              </div>
              <div class="userRating ms-auto">
                <h6 class="reviewRating">{{rating}}/10 &#9733;</h6>
              </div>
            </div>
          {{/each}}
        {{else}}
          <div class="reviewTitleUpdateDiv">
            <h3 class="reviewTitle">Reviews</h3>
          </div>
          <p>No reviews found.</p>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>

<script src="http://localhost:8080/assets/js/review.js"></script>